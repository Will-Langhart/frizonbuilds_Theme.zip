    },
    {
      "type": "header",
      "content": "t:sections.search.header_3.content"
    },
    {
      "type": "checkbox",
      "id": "show-overlay",
      "label": "t:sections.search.show-overlay.label",
      "default": false
    },
    {
      "type": "color",
      "id": "color",
      "label": "t:sections.search.color.label",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "background",
