      "default": "#000000"
    },
    {
      "type": "range",
      "id": "opacity",
      "label": "t:sections.search.opacity.label",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "t:sections.search.presets.search.name",
      "category": "t:sections.search.presets.search.category"
    }
  ]
}
{% endschema %}